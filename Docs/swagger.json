{
    "swagger": "2.0",
    "info": {
        "title": "BANKING SYSTEM",
        "description": "API Specification for the Banking system backend server",
        "version": "1.0.0",
        "contact": {
            "email": "m.bienaimee@alustudent.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/mit"
        },
        "externalDocs": {
            "description": "Get source code",
            "url": "https://github.com/mbienaimee/bsa"
        }
    },
    "basePath": "",
    "schemes": ["http", "https"],
    "securityDefinitions": {
        "bearerAuth": {
          "type": "apiKey",
          "name": "x-auth-token",
          "in": "header",
          "description": "Enter your JWT token in the format 'Bearer {token}'"
        }
      },
    "tags": [
        {
            "name": "User",
            "description": "Operations pertaining to users"
        },
        {
            "name": "Account",
            "description": "Operations pertaining to bank accounts"
        }
    ],
    "paths": {
        "/api/account/addacc": {
            "post": {
                "tags": ["Account"],
                "summary": "Create a new bank account",
                "description": "Creates a new bank account",
                "security": [
                    {
                        "adminMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/account"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Account created successfully"
                    }
                }
            }
        },
        "/api/account/update/{id}": {
            "put": {
                "tags": ["Account"],
                "summary": "Update a bank account",
                "description": "Updates an existing bank account",
                "security": [
                    {
                        "adminMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the account to update",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/account"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Account updated successfully"
                    }
                }
            }
        },
        "/api/account/delete": {
            "delete": {
                "tags": ["Account"],
                "summary": "Delete a bank account",
                "description": "Deletes a bank account",
                "security": [
                    {
                        "adminMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "description": "ID of the account to delete",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Account deleted successfully"
                    }
                }
            }
        },
        "/api/account/list": {
            "get": {
                "tags": ["Account"],
                "summary": "Get list of bank accounts",
                "description": "Retrieves a list of all bank accounts",
                "parameters": [
                    {
                      "in": "query",
                      "name": "all",
          
                      "required": true,
                      "description": "account object"
                    }
                  ],
                "security": [
                    {
                        "adminMiddleware": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of bank accounts retrieved successfully",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/account"
                            }
                        }
                    }
                }
            }
        },
        "/api/account/userById": {
            "get": {
                "tags": ["Account"],
                "summary": "Get bank account by ID",
                "description": "Retrieves a specific bank account by its ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID of the account to retrieve",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bank account retrieved successfully",
                        "schema": {
                            "$ref": "#/components/schemas/account"
                        }
                    }
                }
            }
        },
        "/api/account/transfer": {
            "post": {
                "tags": ["Account"],
                "summary": "Transfer funds between accounts",
                "description": "Transfer funds from one bank account to another",
                "security": [
                    {
                        "userMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/transferRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Funds transferred successfully"
                    }
                }
            }
        },
        "/api/account/deposit": {
            "post": {
                "tags": ["Account"],
                "summary": "Deposit funds into an account",
                "description": "Deposit funds into a bank account",
                "security": [
                    {
                        "userMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/depositRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Funds deposited successfully"
                    }
                }
            }
        },
        "/api/account/withdraw": {
            "post": {
                "tags": ["Account"],
                "summary": "Withdraw funds from an account",
                "description": "Withdraw funds from a bank account",
                "security": [
                    {
                        "userMiddleware": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/withdrawalRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Funds withdrawn successfully"
                    }
                }
            }
        },
        "/api/v1/register": {
            "post": {
                "tags": ["User"],
                "summary": "Register a new user",
                "description": "Creates a new user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/user"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User registered successfully"
                    }
                }
            }
        },
        "/api/v1/login": {
            "post": {
                "tags": ["User"],
                "summary": "Login existing user",
                "description": "Logs in an existing user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/loginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User logged in successfully"
                    }
                }
            }
        },
        "/api/v1/verify": {
            "post": {
                "tags": ["User"],
                "summary": "Validate OTP",
                "description": "Validates OTP for user verification",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/otpVerificationRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OTP validated successfully"
                    }
                }
            }
        },
        "/api/v1/list": {
            "get": {
                "tags": ["User"],
                "summary": "Get list of users",
                "description": "Retrieves a list of all users",
                "parameters": [
                    {
                      "in": "query",
                      "name": "all",
          
                      "required": true,
                      "description": "Contact object"
                    }
                  ],
                "security": [
                    {
                        "adminMiddleware": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of users retrieved successfully",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/components/schemas/user"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/list/{id}": {
            "get": {
                "tags": ["User"],
                "summary": "Get user by ID",
                "description": "Retrieves a specific user by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user to retrieve",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User retrieved successfully",
                        "schema": {
                            "$ref": "#/components/schemas/user"
                        }
                    }
                }
            }
        },
        "/api/v1/delete/{id}": {
            "delete": {
                "tags": ["User"],
                "summary": "Delete user",
                "description": "Deletes a user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user to delete",
                        "required": true,
                        "type": "string"
                    }
                ],
                "security": [
                    {
                        "userMiddleware": []
                    },
                    {
                        "adminMiddleware": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully"
                    }
                }
            }
        },
        "/api/v1/update/{id}": {
            "put": {
                "tags": ["User"],
                "summary": "Update user details",
                "description": "Updates details of an existing user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user to update",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "$ref": "#/components/schemas/user"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details updated successfully"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "description": "First name of the user"
                    },
                    "lastName": {
                        "type": "string",
                        "description": "Last name of the user"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email address of the user"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password"
                    },
                    "age": {
                        "type": "string",
                        "description": "User's password"
                    }, 
                    "role": {
                        "type": "string",
                        "description": "User's password"
                    },
                    "verified": {
                        "type": "string",
                        "description": "User's password"
                    }
                }
            },
            "account": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "description": "First name of the account holder"
                    },
                    "lastName": {
                        "type": "string",
                        "description": "Last name of the account holder"
                    },
                    "idNumber": {
                        "type": "string",
                        "description": "Identification number of the account holder"
                    },
                    "accountType": {
                        "type": "string",
                        "description": "Type of the bank account (e.g., savings, checking)"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Contact phone number of the account holder"
                    },
                    "accountNumber": {
                        "type": "string",
                        "description": "Unique account number"
                    }
                }
            },
            "transferRequest": {
                "type": "object",
                "properties": {
                    "fromAccountNumber": {
                        "type": "string",
                        "description": "Account number to transfer funds from"
                    },
                    "toAccountNumber": {
                        "type": "string",
                        "description": "Account number to transfer funds to"
                    },
                    "amount": {
                        "type": "number",
                        "description": "Amount to transfer"
                    }
                }
            },
            "depositRequest": {
                "type": "object",
                "properties": {
                    "accountNumber": {
                        "type": "string",
                        "description": "Account number to deposit funds into"
                    },
                    "amount": {
                        "type": "number",
                        "description": "Amount to deposit"
                    }
                }
            },
            "withdrawalRequest": {
                "type": "object",
                "properties": {
                    "accountNumber": {
                        "type": "string",
                        "description": "Account number to withdraw funds from"
                    },
                    "amount": {
                        "type": "number",
                        "description": "Amount to withdraw"
                    }
                }
            },
            "loginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email address"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password"
                    }
                }
            },
            "otpVerificationRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email address"
                    },
                    "otp": {
                        "type": "string",
                        "description": "One-time password for verification"
                    }
                }
            }
        },
        "securitySchemes": {
            "adminMiddleware": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header",
                "description": "Use admin token for authorization"
            },
            "userMiddleware": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header",
                "description": "Use user token for authorization"
            }
        }
    }
}
